\RequirePackage{fancyhdr}
\RequirePackage[export]{adjustbox}

% Options: right, left, rotate
\newif\if@right\@rightfalse
\DeclareOption{right}{
    \@righttrue
}
\newif\if@left\@leftfalse
\DeclareOption{left}{
    \@lefttrue
}
\newif\if@rotate\@rotatefalse
\DeclareOption{rotate}{
    \@rotatetrue
}
\ExecuteOptions{right}
\ProcessOptions\relax

\if@right\@leftfalse\fi

% The main command
\newcommand{\pokemonnumbering}{%
\clearpage%
\pagestyle{fancy}%
\pagenumbering{arabic}%
\renewcommand*{\thepage}{\arabic{page}}%
\if@rotate
    \if@left
        \rfoot{\includegraphics[height=30pt,angle=-20,right]{icons/\thepage.png}}
    \else
        \lfoot{\includegraphics[height=30pt,angle=20,left]{icons/\thepage.png}}
    \fi
\else
    \if@left
        \rfoot{\includegraphics[height=30pt,right]{icons/\thepage.png}}
    \else
        \lfoot{\includegraphics[height=30pt,left]{icons/\thepage.png}}
    \fi
\fi
}

\endinput